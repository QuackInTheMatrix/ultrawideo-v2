{
  "name": "UltraWideo",
  "description": "Upscale or stretch any video on the web, to make it look great on UltraWide screens.",
  "version": "1.7.0",
  "author": "Nenad NovakoviÄ‡ - dvlden",
  "manifest_version": 2,
  "background": {
    "scripts": ["dist/scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "UltraWideo",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    }
  },
  "permissions": ["storage"],
  "content_scripts": [{
    "matches": ["*://*/*"],
    "all_frames": true,
    "js": ["dist/scripts/inject.js"],
    "css": ["dist/styles/inject.css"]
  }],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "commands": {
    "toggle-pause": {
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      },
      "description": "Send a 'toggle-pause' event to the extension",
      "global": true
    },
    "toggle-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Send a 'toggle-mode' event to the extension",
      "global": true
    }
  }
}
